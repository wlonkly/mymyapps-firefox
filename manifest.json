{
  "manifest_version": 2,
  "name": "MyMyApps",
  "version": "1.2",
  "description": "Easily access and manage your Microsoft MyApps links with this Firefox extension. Automatically fetch and display your app links!",
  
  "permissions": [
    "storage",
    "tabs"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["https://myapps.microsoft.com/refreshapps"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "MyMyApps",
    "default_icon": {
      "128": "icon.png"
    }
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+M"
      },
      "description": "Open MyMyApps popup"
    }
  },
  
  "icons": {
    "128": "icon.png"
  },

  "gecko": {
    "id": "@mymyapps-firefox",
    "data_collection_permissions": {
      "required": ["none"]
    }
  },
  
  "web_accessible_resources": []
}
